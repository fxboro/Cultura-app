rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Events: Publicly readable, write restricted to admins (or no one for now)
    match /events/{eventId} {
      allow read: if true;
      allow write: if false; // Lock writes to events for now
    }
    
    // Tickets: Users can read/create their own tickets
    match /tickets/{ticketId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow update: if false; // No updating tickets for now
      allow delete: if false; // No deleting tickets for now
    }
    
    // Users: Users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
